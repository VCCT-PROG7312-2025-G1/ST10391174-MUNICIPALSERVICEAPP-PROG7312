@{
    ViewBag.Title = "Issue Submitted Successfully - POE Part 1";
    var issue = ViewBag.Issue as MunicipalServiceApp_PROG7312.Models.Issue;
    var categoryCount = ViewBag.CategoryCount;
    var lastSubmitted = ViewBag.LastSubmitted;
    var nextForProcessing = ViewBag.NextForProcessing;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card card-custom slide-up">
                <div class="card-body text-center p-5">

                    <!-- Success Animation -->
                    <div class="mb-4">
                        <div class="success-animation">
                            <i class="fas fa-check-circle fa-5x text-success"
                               style="animation: pulse 2s infinite;"></i>
                        </div>
                    </div>

                    <h2 class="text-success mb-4 fw-bold">Issue Submitted Successfully!</h2>
                    <p class="lead mb-4">
                        Your report has been processed 
                    </p>

                    <!-- Enhanced Issue Details Card -->
                    <div class="row mb-5">
                        <div class="col-md-8 mx-auto">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Issue Details - POE Part 1
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4 text-end">Issue ID:</dt>
                                        <dd class="col-sm-8">
                                            <code class="text-primary">@issue.IssueId</code>
                                        </dd>

                                        <dt class="col-sm-4 text-end">Status:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-primary">@issue.Status</span>
                                        </dd>

                                        <dt class="col-sm-4 text-end">Date Submitted:</dt>
                                        <dd class="col-sm-8">
                                            @issue.DateReported.ToString("yyyy-MM-dd HH:mm")
                                        </dd>

                                        <dt class="col-sm-4 text-end">Category:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-secondary">@issue.Category</span>
                                        </dd>

                                        <dt class="col-sm-4 text-end">Location:</dt>
                                        <dd class="col-sm-8">@issue.Location</dd>

                                        @if (!string.IsNullOrEmpty(issue.AttachedFilePath))
                                        {
                                            <dt class="col-sm-4 text-end">Attachment:</dt>
                                            <dd class="col-sm-8">
                                                <i class="fas fa-file me-1"></i>@issue.AttachedFilePath
                                            </dd>
                                        }
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                  

                    <!-- Real-time Status Updates Alert -->
                    <div class="alert alert-success alert-custom mb-4" role="alert">
                        <h6>
                            <i class="fas fa-bell me-2"></i>Municipal Services Processing System
                        </h6>
                        <p class="mb-2">
                            Your issue has been added to our processing queue.
                           
                        </p>
                        <div class="progress progress-custom mb-2">
                            <div class="progress-bar progress-bar-custom"
                                 role="progressbar"
                                 style="width: 25%"
                                 id="statusProgress"
                                 aria-valuenow="25"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                        
                    </div>

                    <!-- Action Buttons -->
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a href="@Url.Action("ReportIssue")"
                               class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-plus me-2"></i>Report Another Issue
                            </a>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-outline-info btn-lg w-100"
                                    id="trackStatusBtn">
                                <i class="fas fa-search me-2"></i>Track Status
                            </button>
                        </div>
                        <div class="col-md-4">
                            <a href="@Url.Action("Index")"
                               class="btn btn-primary-custom btn-lg w-100">
                                <i class="fas fa-home me-2"></i>Back to Home
                            </a>
                        </div>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>
</div>

