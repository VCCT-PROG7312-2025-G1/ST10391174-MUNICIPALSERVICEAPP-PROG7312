@* Views/Admin/CreateEvent.cshtml *@
@model MunicipalServiceApp_PROG7312.Models.ManageEventViewModel

@{
    ViewBag.Title = "Create New Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card card-custom">
                <div class="card-header bg-gradient-purple text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Create New Event
                    </h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("CreateEvent", "Admin", FormMethod.Post, new { @class = "event-form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label class="form-label fw-bold">Event Title *</label>
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Enter event title" })
                                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Category *</label>
                                @Html.DropDownListFor(m => m.Category, new SelectList(Model.AvailableCategories), "Select", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Description *</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "4", @placeholder = "Describe the event..." })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Event Date *</label>
                                @Html.TextBoxFor(m => m.EventDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local" })
                                @Html.ValidationMessageFor(m => m.EventDate, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Location *</label>
                                @Html.TextBoxFor(m => m.Location, new { @class = "form-control", @placeholder = "Event location" })
                                @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Priority (1-5) *</label>
                                @Html.TextBoxFor(m => m.Priority, new { @class = "form-control", @type = "number", @min = "1", @max = "5" })
                                <small class="text-muted">1 = Highest, 5 = Lowest</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Expected Attendees</label>
                                @Html.TextBoxFor(m => m.AttendeeCount, new { @class = "form-control", @type = "number", @min = "0" })
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold d-block">Options</label>
                                <div class="form-check mt-2">
                                    @Html.CheckBoxFor(m => m.IsFeatured, new { @class = "form-check-input" })
                                    @Html.LabelFor(m => m.IsFeatured, "Featured Event", new { @class = "form-check-label" })
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Tags</label>
                            @Html.TextBoxFor(m => m.TagsString, new { @class = "form-control", @placeholder = "tag1, tag2, tag3" })
                            <small class="text-muted">Comma-separated tags</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Create Event
                            </button>
                            <a href="@Url.Action("Dashboard")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-purple {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }
</style>