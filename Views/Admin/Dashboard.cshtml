@model MunicipalServiceApp_PROG7312.Models.AdminDashboardViewModel
<!--chatgpt used to help generate the design of the view and fix spelling and layout errors-->
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Admin Header -->
<div class="admin-header">
    <div class="container">
        <div class="row align-items-center py-4">
            <div class="col-md-6">
                <h2 class="mb-0 text-white">
                    <i class="fas fa-tachometer-alt me-3"></i>Admin Dashboard
                </h2>
                <small class="text-white-50">Event Management System</small>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("CreateEvent")" class="btn btn-light me-2">
                    <i class="fas fa-plus me-2"></i>Create Event
                </a>
                <a href="@Url.Action("Logout")" class="btn btn-outline-light">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="stat-card stat-card-blue">
                <div class="stat-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.TotalEvents</h3>
                    <p>Total Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-green">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.UpcomingEvents</h3>
                    <p>Upcoming</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-orange">
                <div class="stat-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.FeaturedEvents</h3>
                    <p>Featured</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-purple">
                <div class="stat-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.EventsByCategory.Count</h3>
                    <p>Categories</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Events Table -->
    <div class="card card-custom">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>All Events
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evt in Model.AllEvents.OrderBy(e => e.EventDate))
                        {
                            <tr>
                                <td>
                                    <strong>@evt.Title</strong>
                                    @if (evt.IsFeatured)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">
                                            <i class="fas fa-star"></i> Featured
                                        </span>
                                    }
                                </td>
                                <td><span class="badge bg-primary">@evt.Category</span></td>
                                <td>@evt.EventDate.ToString("MMM dd, yyyy")</td>
                                <td>@evt.Location</td>
                                <td>
                                    <span class="priority-badge priority-@evt.Priority">
                                        P@evt.Priority
                                    </span>
                                </td>
                                <td>
                                    @if (evt.EventDate >= DateTime.Now)
                                    {
                                        <span class="badge bg-success">Upcoming</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Past</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("EditEvent", new { id = evt.EventId })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteEvent", new { id = evt.EventId })"
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

