@model MunicipalServiceApp_PROG7312.Models.EventSearchViewModel

@{
    ViewBag.Title = "Community Events Hub - POE Part 2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--chatgpt used to help generate the design of the view and fix spelling and layout errors-->
<!-- Unique Header Design with Gradient -->
<div style="background: linear-gradient(to right, #2c3e50, #3498db); padding: 3rem 0; margin-bottom: 2rem;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="text-white mb-2" style="font-weight: 800; letter-spacing: -1px;">
                    🎯 Community Events Hub
                </h1>
                <p class="text-white-50 mb-0" style="font-size: 1.1rem;">
                    Discover what's happening in your neighborhood
                </p>
            </div>
            <div class="col-md-4 text-end">
                <div class="bg-white rounded p-3 shadow-sm">
                    <div class="text-center">
                        <h3 class="text-primary mb-0">@Model.TotalEvents</h3>
                        <small class="text-muted">Active Events</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Unique Tabbed Search Interface -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body p-4">
            <ul class="nav nav-tabs mb-4" id="searchTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="quick-tab" data-bs-toggle="tab" data-bs-target="#quick-search" type="button">
                        <i class="fas fa-bolt me-2"></i>Quick Search
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="advanced-tab" data-bs-toggle="tab" data-bs-target="#advanced-search" type="button">
                        <i class="fas fa-sliders-h me-2"></i>Advanced Filters
                    </button>
                </li>
                <li class="nav-item ms-auto">
                    <span class="badge bg-info fs-6">
                        <i class="fas fa-database me-1"></i>Smart Algorithms Active
                    </span>
                </li>
            </ul>

            <div class="tab-content" id="searchTabContent">
                <!-- Quick Search Tab -->
                <div class="tab-pane fade show active" id="quick-search" role="tabpanel">
                    @using (Html.BeginForm("LocalEvents", "Home", FormMethod.Get, new { @class = "search-form" }))
                    {
                        <div class="row g-3">
                            <div class="col-md-10">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="fas fa-search text-muted"></i>
                                    </span>
                                    @Html.TextBox("searchQuery", Model.SearchQuery, new {
                                    @class = "form-control border-start-0",
                                                                @placeholder = "What are you looking for?",
                                                                @style = "border-left: none;"
                                                                })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-search me-2"></i>Find
                            </button>
                        </div>
                    </div>
                                        }
                </div>

                <!-- Advanced Search Tab -->
                <div class="tab-pane fade" id="advanced-search" role="tabpanel">
                    @using (Html.BeginForm("LocalEvents", "Home", FormMethod.Get))
                    {
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold small text-uppercase">Keywords</label>
                                @Html.TextBox("searchQuery", Model.SearchQuery, new {
                                @class = "form-control",
                                                        @placeholder = "Enter keywords"
                                                        })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-uppercase">Category</label>
                            @Html.DropDownList("category",
                                                        new SelectList(Model.Categories),
                                                        "All",
                                                        new { @class = "form-select" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-uppercase">Starting From</label>
                            @Html.TextBox("startDate",
                                                        Model.StartDate?.ToString("yyyy-MM-dd"),
                                                        new { @class = "form-control", @type = "date" })
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter me-2"></i>Apply Filters
                            </button>
                        </div>
                    </div>
                                        }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content: Timeline View -->
        <div class="col-lg-9">
            @if (Model.EventsByDate.Any())
            {
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">📅 Events Timeline</h4>
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-primary active">Timeline</button>
                        <button type="button" class="btn btn-outline-primary">Grid</button>
                    </div>
                </div>

                <!-- Timeline Container -->
                <div class="timeline-container">
                    @foreach (var dateGroup in Model.EventsByDate)
                    {
                        <div class="timeline-block mb-5">
                            <!-- Date Marker -->
                            <div class="timeline-date-marker">
                                <div class="date-circle">
                                    <div class="date-day">@dateGroup.Key.ToString("dd")</div>
                                    <div class="date-month">@dateGroup.Key.ToString("MMM")</div>
                                </div>
                            </div>

                            <!-- Events for this date -->
                            <div class="timeline-events">
                                @foreach (var evt in dateGroup.Value)
                                {
                                    <div class="event-timeline-card mb-3">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-8">
                                                        <div class="d-flex align-items-start mb-2">
                                                            @if (evt.IsFeatured)
                                                            {
                                                                <span class="badge bg-gradient-warning text-dark me-2">
                                                                    ⭐ Featured
                                                                </span>
                                                            }
                                                            <span class="badge" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                                                                @evt.Category
                                                            </span>
                                                        </div>

                                                        <h5 class="card-title mb-2" style="color: #2c3e50;">
                                                            @evt.Title
                                                        </h5>

                                                        <p class="card-text text-muted mb-3" style="font-size: 0.95rem;">
                                                            @evt.Description
                                                        </p>

                                                        <div class="event-details-row">
                                                            <div class="detail-item">
                                                                <i class="fas fa-clock text-primary me-1"></i>
                                                                <span>@evt.EventDate.ToString("HH:mm")</span>
                                                            </div>
                                                            <div class="detail-item">
                                                                <i class="fas fa-map-marker-alt text-danger me-1"></i>
                                                                <span>@evt.Location</span>
                                                            </div>
                                                            <div class="detail-item">
                                                                <i class="fas fa-users text-success me-1"></i>
                                                                <span>@evt.AttendeeCount expected</span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4 text-end">
                                                        <div class="priority-indicator mb-3">
                                                            <div class="priority-label">Priority Level</div>
                                                            <div class="priority-value p@evt.Priority">
                                                                P@evt.Priority
                                                            </div>
                                                        </div>

                                                        @if (evt.Tags.Any())
                                                        {
                                                            <div class="tag-cloud mb-2">
                                                                @foreach (var tag in evt.Tags.Take(3))
                                                                {
                                                                    <span class="tag-chip">#@tag</span>
                                                                }
                                                            </div>
                                                        }

                                                        <button class="btn btn-sm btn-outline-primary w-100 mt-2"
                                                                onclick="showEventModal('@evt.EventId')">
                                                            <i class="fas fa-info-circle me-1"></i>More Info
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No Events Found</h5>
                    <p class="text-muted">Try adjusting your search criteria</p>
                </div>
            }
        </div>

        <!-- Sidebar: Insights & Recommendations -->
        <div class="col-lg-3">
            <!-- Smart Recommendations -->
            <div class="card border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                <div class="card-body text-white">
                    <h6 class="mb-3">
                        <i class="fas fa-lightbulb me-2"></i>Smart Picks
                    </h6>
                    @if (Model.RecommendedEvents.Any())
                    {
                        @foreach (var evt in Model.RecommendedEvents.Take(4))
                        {
                            <div class="recommendation-card mb-2 p-2" style="background: rgba(255,255,255,0.1); border-radius: 8px;">
                                <small class="d-block fw-bold">@evt.Title</small>
                                <small class="d-block text-white-50">
                                    @evt.EventDate.ToString("MMM dd") • @evt.Location
                                </small>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="small mb-0 opacity-75">Search to get personalized suggestions</p>
                    }
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0">
                    <h6 class="mb-0">📊 Quick Stats</h6>
                </div>
                <div class="card-body">
                    <div class="stat-row mb-3">
                        <div class="stat-label">Filtered Results</div>
                        <div class="stat-value text-primary">@Model.FilteredEvents</div>
                    </div>
                    <div class="stat-row mb-3">
                        <div class="stat-label">Categories</div>
                        <div class="stat-value text-success">@Model.Statistics.UniqueCategories</div>
                    </div>
                    <div class="stat-row">
                        <div class="stat-label">Total Searches</div>
                        <div class="stat-value text-info">@Model.Statistics.TotalSearches</div>
                    </div>
                </div>
            </div>

            <!-- Recent Searches -->
            @if (Model.RecentSearches.Count > 0)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h6 class="mb-0">🕐 Recent Searches</h6>
                    </div>
                    <div class="card-body">
                        @foreach (var search in Model.RecentSearches.Take(5))
                        {
                            <button class="btn btn-sm btn-light w-100 mb-2 text-start"
                                    onclick="quickSearch('@search')">
                                <i class="fas fa-history me-2"></i>@search
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<script>
    function quickSearch(term) {
        document.querySelector('input[name="searchQuery"]').value = term;
        document.querySelector('.search-form').submit();
    }

    function showEventModal(eventId) {
        alert('Event details modal for: ' + eventId);
        // Implement modal logic
    }
</script>